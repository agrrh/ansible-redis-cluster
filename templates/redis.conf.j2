# {{ ansible_managed }}
# Minimal sane redis cluster configuration file

daemonize yes
pidfile /var/run/redis/redis-server.pid

bind {{ redis_bind }}
port {{ redis_port }}

cluster-enabled yes
cluster-config-file nodes.conf
cluster-node-timeout 5000

dir /var/lib/redis
dbfilename dump.rdb
appendonly yes

requirepass {{ redis_requirepass }}
